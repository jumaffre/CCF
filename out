00230       ringbuffer::AbstractWriterFactory& writer_factory,
00231       NetworkState& network,
00232       std::shared_ptr<enclave::RPCSessions> rpcsessions,
00233       ShareManager& share_manager) :
00234       sm(State::uninitialized),
