00385     static size_t total_byte_size(const PreparedTxs& txs)
00386     {
00387       return std::accumulate(
00388         txs.begin(), txs.end(), 0, [](size_t n, const PreparedTx& tx) {
00389           return n + tx.rpc.encoded.size();
00390         });
