00354     {
00355       if (consensus_type == ConsensusType::BFT && is_follower())
00356       {
00357         return get_term_internal(idx);
00358       }
00359       std::lock_guard<SpinLock> guard(state->lock);
00360       return get_term_internal(idx);
00361     }
