00038 template <typename T>
00039 void check_hash_uniqueness()
00040 {
00041   std::hash<std::vector<T>> h{};
00042 
00043   std::set<size_t> taken;
00044 
00045   std::vector<T> identical;
00046   std::vector<T> different;
