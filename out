00051         {
00052           using TT = typename T::TxView;
00053           if constexpr (READ_ONLY)
00054             li.register_metatable<TT>(lua::kv_methods_read_only<TT>);
00055           else
00056             li.register_metatable<TT, WT<TT>>(lua::kv_methods<TT, WT<TT>>);
00057         }
