00056         if (!user_id.has_value())
00057         {
00058           auto user_certs_view =
00059             tx.get_read_only_view<CertDERs>(Tables::USER_CERT_DERS);
00060           user_id = user_certs_view->get(ctx->session->caller_cert);
00061         }
00062 
