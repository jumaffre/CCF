00072                << ", this:" << (uint64_t)this << std::endl;
00073       for (uint32_t i = 0; i < times.size(); ++i)
00074       {
00075         uint32_t latency = 0;
00076         if (times[i].time_samples != 0)
00077         {
00078           latency = (times[i].cumulative_time / times[i].time_samples);
00079         }
00080 
