00575   config[node_id1] = {};
00576   r0.add_configuration(0, config);
00577   r1.add_configuration(0, config);
00578 
00579   map<aft::NodeId, TRaft*> nodes;
00580   nodes[node_id0] = &r0;
00581   nodes[node_id1] = &r1;
00582 
