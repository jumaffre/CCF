00074     void update_metrics(
00075       const std::shared_ptr<enclave::RpcContext> ctx,
00076       EndpointRegistry::Metrics& m)
00077     {
00078       int cat = ctx->get_response_status() / 100;
00079       switch (cat)
00080       {
00081         case 4:
00082           m.errors++;
00083           return;
00084         case 5:
00085           m.failures++;
