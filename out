00044 // Used by fmtlib to render ccf::State
00045 namespace std
00046 {
00047   std::ostream& operator<<(std::ostream& os, ccf::State s)
00048   {
00049     nlohmann::json j;
00050     to_json(j, s);
00051     return os << j.dump();
