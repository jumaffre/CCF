00342     std::generate(raw.begin(), raw.end(), rand);
00343 
00344     const auto encoded = tls::b64_from_raw(raw.data(), raw.size());
00345     const auto decoded = tls::raw_from_b64(encoded);
00346     REQUIRE(decoded == raw);
