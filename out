00319     void listen_resolved()
00320     {
00321       int rc;
00322 
00323       while (addr_current != nullptr)
00324       {
00325         update_resolved_address(addr_current->ai_family, addr_current->ai_addr);
00326 
00327         if ((rc = uv_tcp_bind(&uv_handle, addr_current->ai_addr, 0)) < 0)
