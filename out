00062       for (size_t i = 0; i < TX_RATE_BUCKETS_LEN; ++i)
00063       {
00064         if (tx_rates[i] > 0)
00065         {
00066           result[std::to_string(i)]["rate"] = tx_rates[i];
00067           result[std::to_string(i)]["duration"] = tx_time_passed[i];
00068         }
00069       }
00070 
