00042 TEST_CASE("Sign, verify, with KeyPair")
00043 {
00044   for (const auto curve : supported_curves)
00045   {
00046     INFO("With curve: " << labels[static_cast<size_t>(curve) - 1]);
00047     auto kp = tls::make_key_pair(curve);
