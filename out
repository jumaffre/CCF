00048     SUBCASE("basic")
00049     {
00050       constexpr auto code(
00051         "local tx, a, b = ...;"
00052         "if tx:get(0) ~= a then return 'tx get failed' end;"
00053 
00054         "if tx:get(1) ~= nil then return 'index 1 already populated' end;"
00055         "tx:put(1, '');"
00056         "if tx:get(1) ~= '' then return 'tx put failed' end;"
