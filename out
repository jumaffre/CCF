00081       // Signals for which the default action is "Core".
00082       SIGABRT, // Abort signal from abort(3)
00083       SIGBUS, // Bus error (bad memory access)
00084       SIGFPE, // Floating point exception
00085       SIGILL, // Illegal Instruction
