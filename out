00171   class Verifier_k1Bitcoin : public Verifier
00172   {
00173   protected:
00174     BCk1ContextPtr bc_ctx = make_bc_context(SECP256K1_CONTEXT_VERIFY);
00175 
00176     secp256k1_pubkey bc_pub;
