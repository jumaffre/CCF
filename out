00015 int main()
00016 {
00017   try
00018   {
00019 
00020     const size_t num_trees = 32;
00021     const size_t max_num_leaves = 32 * 1024;
00022 
00023 
00024 
00025 
00026 
00027     // std::srand(0);
00028     std::srand(std::time(0));
00029 
00030     size_t total_leaves = 0, total_flushes = 0, total_retractions = 0;
00031 
