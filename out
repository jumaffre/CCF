00078           T& table,
00079           Tables&... tables)
00080         {
00081           decltype(auto) name = table.get_name();
00082           if (wl.find(name) != wl.end())
00083           {
00084             register_meta<T>(li);
00085             add_table(li, tx, table);
00086           }
00087           process_tables(li, tx, wl, tables...);
00088         }
