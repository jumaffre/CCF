00135     kv::TxHistory::Result record_primary(
00136       kv::TxID tx_id,
00137       kv::NodeId node_id,
00138       crypto::Sha256Hash& root,
00139       std::vector<uint8_t>& sig,
00140       Nonce hashed_nonce,
