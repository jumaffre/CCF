00029 
00030     for (const auto f : headers_to_sign)
00031     {
00032       if (f == auth::SIGN_HEADER_REQUEST_TARGET)
00033       {
00034         // Store verb as lowercase
00035         nonstd::to_lower(verb);
00036         value = fmt::format("{} {}", verb, path);
00037         if (!query.empty())
