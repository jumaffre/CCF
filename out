00059 
00060       signed_string.append(f);
00061       signed_string.append(": ");
00062       signed_string.append(value);
00063     }
00064 
00065     auto ret =
00066       std::vector<uint8_t>({signed_string.begin(), signed_string.end()});
00067     return ret;
