00558     std::make_unique<aft::LedgerStubProxy>(node_id2),
00559     std::make_shared<aft::ChannelStubProxy>(),
00560     std::make_shared<aft::StubSnapshotter>(),
00561     nullptr,
00562     nullptr,
00563     cert,
00564 
00565     std::make_shared<aft::State>(node_id2),
00566     nullptr,
00567     nullptr,
00568     nullptr,
