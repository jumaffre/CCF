00043 string get_script_path(string name)
00044 {
00045   auto default_dir = "../src/runtime_config";
00046   auto dir = getenv("RUNTIME_CONFIG_DIR");
00047   stringstream ss;
00048   ss << (dir ? dir : default_dir) << "/" << name;
00049   return ss.str();
00050 }
