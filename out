00281     crypto::Sha256Hash get_root() const
00282     {
00283       const merkle::Hash& root = tree->root();
00284       crypto::Sha256Hash result;
00285       std::copy(root.bytes, root.bytes + root.size(), result.h.begin());
00286       return result;
00287     }
