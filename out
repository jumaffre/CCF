00085     {
00086       if (!intel_drng_ptr)
00087         intel_drng_ptr = std::make_shared<IntelDRNG>();
00088       return intel_drng_ptr;
00089     }
00090 
00091     return std::make_shared<MbedtlsEntropy>();
00092   }
