00520     REQUIRE(pub_v.has_value());
00521     REQUIRE(pub_v.value() == "bar");
00522 
00523     const auto priv_v = private_view->get("hello");
00524     REQUIRE(priv_v.has_value());
00525     REQUIRE(priv_v.value() == "world");
00526   }
