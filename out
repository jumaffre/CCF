00359 TEST_CASE("Truncation")
00360 {
00361   fs::remove_all(ledger_dir);
00362 
00363   size_t chunk_threshold = 30;
00364   Ledger ledger(ledger_dir, wf, chunk_threshold);
00365   TestEntrySubmitter entry_submitter(ledger);
