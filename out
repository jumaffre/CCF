00075       template <typename T>
00076       void fill_schema(nlohmann::json& schema)
00077       {
00078         T t;
00079         if constexpr (std::is_enum<T>::value)
00080         {
00081           fill_enum_schema(schema, t);
00082         }
00083         else
00084         {
00085           fill_json_schema(schema, t);
00086         }
00087       }
00088     }
